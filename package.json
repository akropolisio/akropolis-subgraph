{
  "name": "delphi",
  "license": "UNLICENSED",
  "scripts": {
    "prepare-env": "mustache ./config/${NETWORK}/${TYPE}.json .env.template > .env",
    "build:eth:sandbox-rinkeby": "NETWORK=eth TYPE=sandbox-rinkeby yarn build",
    "build:bsc:sandbox-rinkeby": "NETWORK=bsc TYPE=sandbox-rinkeby yarn build",
    "build": "yarn pre-build && graph build",
    "deploy": "yarn pre-build && yarn dotenv graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ ${SUBGRAPH_NAME} --access-token ${THEGRAPH_ACCESS_TOKEN}",
    "pre-build": "yarn prepare-manifest && yarn codegen",
    "prepare-manifest": "mustache ./config/${NETWORK}/${TYPE}.json ${NETWORK}-subgraph.template.yaml > subgraph.yaml",
    "codegen": "rm -rf ./generated && graph codegen"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.18.0",
    "@graphprotocol/graph-ts": "^0.18.1",
    "dotenv-cli": "^4.0.0"
  },
  "devDependencies": {
    "mustache": "^4.0.1"
  }
}
